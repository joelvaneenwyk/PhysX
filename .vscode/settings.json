{
  "[cmake]": {
    "editor.formatOnPaste": false,
    "editor.formatOnSave": false,
    "editor.formatOnSaveMode": "modificationsIfAvailable",
    "editor.quickSuggestions": {
      "strings": true
    }
  },
  "[markdown]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit",
      "source.organizeImports": "explicit"
    }
  },
  "[python]": {
    "diffEditor.ignoreTrimWhitespace": false,
    "gitlens.codeLens.symbolScopes": ["!Module"],
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit",
      "source.fixAll": "explicit"
    },
    "editor.formatOnType": true,
    "editor.formatOnSave": true,
    "editor.wordBasedSuggestions": "off"
  },
  "ruff.lint.enable": true,
  "ruff.showNotifications": "always",
  "ruff.fixAll": true,
  "ruff.organizeImports": true,
  "ruff.enable": true,
  "ruff.lint.run": "onType",
  "ruff.codeAction.disableRuleComment": {
    "enable": true
  },
  "pylint.severity": {
    "convention": "Hint",
    "error": "Hint",
    "fatal": "Hint",
    "refactor": "Hint",
    "warning": "Hint",
    "info": "Hint"
  },
  "editor.formatOnSave": false,
  "cmake.additionalKits": ["externals/cmakemodules/"],
  "cmake.allowCommentsInPresetsFile": true,
  "cmake.allowUnsupportedPresetsVersions": true,
  "cmake.automaticReconfigure": true,
  "cmake.buildBeforeRun": true,
  "cmake.buildDirectory": "${workspaceFolder}/.build/vscode",
  "cmake.configureOnEdit": true,
  "cmake.configureOnOpen": true,
  "cmake.configureSettings": {
    "CMAKE_TOOLCHAIN_FILE": "C:/Users/JoelVanEenwyk/.vcpkg-clion/vcpkg/scripts/buildsystems/vcpkg.cmake"
  },
  "cmake.ctest.allowParallelJobs": true,
  "cmake.enableTraceLogging": true,
  "cmake.ignoreCMakeListsMissing": false,
  "cmake.ignoreKitEnv": false,
  "cmake.installPrefix": "${workspaceFolder}/.build/install",
  "cmake.loggingLevel": "info",
  "cmake.options.statusBarVisibility": "visible",
  "cmake.revealLog": "always",
  "cmake.setBuildTypeOnMultiConfig": true,
  "cmake.configureArgs": [
    "-DCMAKE_PREFIX_PATH=externals;externals/cmakemodules;externals/targa",
    "-DCMAKE_EXPORT_COMPILE_COMMANDS=ON"
  ],
  "cmake.touchbar.visibility": "hidden",
  "cmake.useCMakePresets": "always",
  "prettier.enable": false,
  "cmake.skipConfigureIfCachePresent": false,
  "vcpkg.general.enable": true,
  "vcpkg.target.hostTriplet": "x64-windows",
  "vcpkg.target.defaultTriplet": "",
  "vcpkg.target.useStaticLib": false,
  "vcpkg.target.installDependencies": true,
  "vcpkg.target.preferSystemLibs": false,
  "vcpkg.target.useManifest": false
}
